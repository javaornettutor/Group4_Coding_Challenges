@model Room_Booking.ViewModel.ClientCheckoutVM

@{
    ViewBag.Title = "Client Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Confirm Checkout ?</h2>

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentBookingsDetails.Customer.name)
        </dd>

        <dt>
            Room name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentBookingsDetails.Room.name)
        </dd>
        <dt>
            @Html.LabelFor(model => model.CurrentBookingsDetails.checkInDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentBookingsDetails.checkInDate)
        </dd>

        <dt>
            @Html.LabelFor(model => model.CurrentBookingsDetails.checkOutDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentBookingsDetails.checkOutDate)
        </dd>

    </dl>
</div>
<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="hidden" value=@Model.CurrentBookingsDetails.Id name="id" />
                <input type="submit" value="Confirm Checkout Booking" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>

</div>
